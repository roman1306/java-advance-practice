<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="file-appender" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%date %level [%thread] %msg%n</Pattern>
        </layout>
    </appender>

    <logger name="logger">
        <level value="info"/>
        <appender-ref ref="file-appender"/>
    </logger>
</configuration>